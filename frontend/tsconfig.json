{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowJs": true,
      "lib": ["esnext", "dom"]
    },
    "vueCompilerOptions": {
      "plugins": ["vite-plugin-vue-component-preview/tooling"]
    },
    "include": ["src/**/*.ts","src/**/*.js", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
    "exclude": [
      "postcss.config.js",
      "tailwind.config.js",
      "vite.config.ts",
      "vue.config.js"
    ]
  }